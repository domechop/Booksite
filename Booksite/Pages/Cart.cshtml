@page
@model Booksite.Pages.CartModel
@{
}

<!--Add title, this is the basket-->
<h2>Your Basket</h2>

<table class="table table-bordered table-striped">
<!--Add table where all the feautres will go.-->
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var i in Model.basket.Items)
        {
            <tr>
                <td>@i.Book.Title</td>
                <td>@i.Quantity</td>
                <td>@i.Book.Price</td>
                <td>@(i.Quantity * i.Book.Price)</td>

            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>

</table>

<div>

    <!--Add another button-->

    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>